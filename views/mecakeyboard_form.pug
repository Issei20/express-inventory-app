extends layout

block content
  h1(class="titleForm") #{title}

  form(method='POST' action='' class="form-create" enctype="multipart/form-data")
      label(for='name') Name :
      input.form-control(type='text', placeholder='' name='name' value=(undefined===mecakeyboard ? '' : mecakeyboard.name))
      label(for='description') Description :
      input.form-control(type='text', placeholder='' name='description' class="descrInput" value=(undefined===mecakeyboard ? '' : mecakeyboard.description))
      label(for='price') Price :
      input.form-control(type='number',step=".01" placeholder='0' name='price' value=(undefined===mecakeyboard ? '' : mecakeyboard.price))
      label(for='number_in_stock') Number in stock :
      input.form-control(type='number', placeholder='0' name='number_in_stock' value=(undefined===mecakeyboard ? '' : mecakeyboard.number_in_stock))
      label(for='brand') Brand :
      input.form-control(type='text', placeholder='' name='brand' value=(undefined===mecakeyboard ? '' : mecakeyboard.brand))
      label(for='layout') Layout:
      select(type='select' placeholder='Select layout' name='layout' required='true')
        if (undefined===mecakeyboard) 
           option(value='AZERTY' ) AZERTY
           option(value='QWERTY') QWERTY
        else
           option(value='AZERTY',selected= (mecakeyboard.layout == 'AZERTY') ) AZERTY
           option(value='QWERTY', selected= (mecakeyboard.layout == 'QWERTY') ) QWERTY
      label(for="image") Image :
      input(type="file" class="form-control-file" name="image" class="fileInput")
      button(type='submit', class="submitBtn") Submit

  if errors
   ul
    for error in errors
     li!= error.msg